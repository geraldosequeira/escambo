<h1>Perfil</h1>

<%= content_for :javascripts do %>
  <%= javascript_include_tag "site/profile/ads" %>
<% end %>

  <%= render partial: "shared/messages", locals: { record: @profile_member } %>

  <%= form_with(model: [:site, :profile, @profile_member], local: true,
                url: site_profile_my_datum_path(current_member) ) do |form| %>

    <div class="form-group">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, class: "form-control col-md-8" %>
    </div>

    <div class="form-group">
      <%= form.label :second_name %>
      <%= form.text_field :second_name, class: "form-control col-md-8" %>
    </div>

    <div class="form-group">
      <%= form.label :birthdate %>
      <%= form.text_field :birthdate, class: "form-control col-md-3 datepicker",
      value: (l(@profile_member.birthdate) unless @profile_member.birthdate.blank?) %>
    </div>

    <%= form.button "Salvar", class: "btn btn-primary" %>
<% end %>
