 <% @ads.each do |ad| %>
    <div class="col-lg-4 col-md-6 mb-4">

      <div class="card h-100">

        <%= image_tag ad.picture.url(:medium), class: "card-img-top" %>

        <div class="card-body">
          <h4 class="card-title">
            <%= link_to ad.title.truncate(20), site_ad_detail_path(ad), id: "ad-#{ad.id}", remote: true %>
          </h4>
          <h5>
            <%= humanized_money_with_symbol(ad.price) %>
          </h5>
          <p class="card-text">
            <%= sanitize ad.description_short %>
          </p>
        </div>

        <div class="card-footer">
          <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
        </div>
      </div>
    </div>
<% end %>
