<!DOCTYPE html>
<html lang="en">

  <head>
    <title>EscamboAPP</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    "application" %>
    <%= stylesheet_link_tag    "site", media: "all" %>
  </head>

  <body id="top">
    <div id="global-spin" class="loading" style="display: none" >Loading&#8230;</div>

    <%= render partial: "layouts/shared/site/navigation" %>


    <div class="container">

      <div class="row">
        <div class="card w-75 sm bg-light col-lg-12 mt-3">
            <div class="card-body col-lg-12">
                <%= form_with url: site_search_path, local: true, method: :get do |form| %>
                  <div class="input-group col-lg-6 mx-auto" >
                      <%= form.text_field :q, {value: params[:q], class: "form-control", placeholder: "Encontre seu produto"} %>
                      <div class="input-group-append">
                        <%= form.button "Pesquisar", class: "btn btn-outline-secondary" %>
                      </div>
                  </div>
                <% end %>
            </div>
          </div>
      </div>

      <div class="row">
        <%= render partial: "layouts/shared/site/sidebar" %>

        <div class="col-lg-9" id="home-detail">
          <%= render partial: "layouts/shared/site/carousel" if controller_path == "site/home" %>
          <%= yield %>
        </div>
      </div>

    </div>

    <%= render partial: "layouts/shared/site/footer" %>

    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "site" %>
  </body>
</html>
