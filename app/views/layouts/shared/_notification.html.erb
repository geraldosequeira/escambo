<% if flash %>
    <% flash.each do |key, value| %>
      <%= javascript_tag "$.notify(
           {
              message: '#{value}'
           },
           {
              type: '#{key == 'notice' ? 'success' : 'danger'}',
              placement:{
                from: 'top',
                align: 'center'
              }
            }
        );"
      %>
    <% end %>
<% end %>
