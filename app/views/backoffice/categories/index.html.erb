<div class="card shadow mb-4">

   <div class="card-header py-3">
     <h6 class="m-0 font-weight-bold text-primary">
      Categorias
      <%= link_to new_backoffice_category_path, class: "btn btn-success btn-circle float-right" do %>
         <i class="fas fa-plus"></i>
      <% end %>
     </h6>
   </div>

   <div class="card-body">
      <div class="table-responsive">
         <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">

            <div class="row">
               <div class="col-sm-12">
                  <table class="table table-bordered dataTable" id="dataTable"
                        width="100%" cellspacing="0" role="grid"
                        aria-describedby="dataTable_info" style="width: 100%;">

                     <thead>
                        <tr role="row">
                           <th class="sorting_asc" tabindex="0" aria-controls="dataTable"
                               rowspan="1" colspan="1" aria-sort="ascending"
                               aria-label="Name: activate to sort column descending"
                               style="width: 141px;">
                              Descrição
                           </th>
                           <th class="sorting" tabindex="0" aria-controls="dataTable"
                               rowspan="1" colspan="1"
                               aria-label="Position: activate to sort column ascending"
                               style="width: 50px; text-align: center;">
                              Opções
                         </th>
                        </tr>
                     </thead>

                     <tbody>
                        <% @categories.each do |category| %>
                           <tr role="row" class="odd">
                              <td class="sorting_1">
                                 <%= category.description %>
                              </td>
                              <td style="text-align: center;">
                                 <%= link_to edit_backoffice_category_path(category), class: "btn btn-info btn-circle btn-sm" do %>
                                   <i class="fas fa-edit"></i>
                                 <% end %>
                                 <a href="#" class="btn btn-warning btn-circle btn-sm" style="cursor: default;" >
                                   <i class="fas fa-times"></i>
                                 </a>
                              </td>
                           </tr>
                        <% end %>
                     </tbody>
                  </table>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
