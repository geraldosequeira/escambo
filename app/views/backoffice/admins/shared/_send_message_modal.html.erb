<div class="modal fade" id="sendMessageModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title" id="messageModalLabel">Message Head</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <%= form_with url: backoffice_send_messages_path do |form| %>

          <div class="form-group">
            <%= form.label "DestinatÃ¡rio", class: "col-form-label" %>
            <%= form.text_field :recipient, class: "form-control", id: "recipient-name", readonly: "readonly" %>
          </div>

          <div class="form-group">
            <%= form.label "Assunto", class: "col-form-label" %>
            <%= form.text_field :subject, class: "form-control", id: "subject-text" %>
          </div>

          <div class="form-group">
            <%= form.label "Mensagem", class: "col-form-label" %>
            <%= form.text_area :message, class: "form-control", id: "message-text" %>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
            <%= form.submit "Enviar", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
