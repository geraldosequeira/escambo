$(function(){
   // Hides the Modal
  $('#sendMessageModal').modal('hide');

  // Set subject and message to empty string
  $('#subject-text').val('');
  $('#message-text').val('');

  // Show Message
  //$.notify("<%= @notify_message%>", "<%= @notify_flag %>")
  $.notify(
         {
            message: "<%= @notify_message %>"
         },
         {
            type: "<%= @notify_flag %>",
            placement:{
              from: 'top',
              align: 'center'
            }
          }
    );

});
